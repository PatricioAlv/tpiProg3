@model PagedResultDto<ProjectDto>

@{
    ViewData["Title"] = "Mis Proyectos";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">
            <i class="fas fa-project-diagram text-primary"></i> Mis Proyectos
        </h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nuevo Proyecto
        </a>
    </div>

    @if (Model?.Items?.Any() == true)
    {
        <div class="row">
            @foreach (var project in Model.Items)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm project-card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-folder text-primary"></i>
                                @project.Name
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">@project.Description</p>
                            
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="fas fa-calendar"></i>
                                    Creado: @project.CreatedAt.ToString("dd/MM/yyyy")
                                </small>
                            </div>

                            @if (project.DueDate.HasValue)
                            {
                                <div class="mb-2">
                                    <small class="text-muted">
                                        <i class="fas fa-clock"></i>
                                        Vence: @project.DueDate.Value.ToString("dd/MM/yyyy")
                                    </small>
                                </div>
                            }

                            <div class="mb-3">
                                @switch (project.Status)
                                {
                                    case ProjectStatus.Planning:
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-clipboard-list"></i> Planificación
                                        </span>
                                        break;
                                    case ProjectStatus.InProgress:
                                        <span class="badge bg-primary">
                                            <i class="fas fa-play"></i> En Progreso
                                        </span>
                                        break;
                                    case ProjectStatus.Completed:
                                        <span class="badge bg-success">
                                            <i class="fas fa-check"></i> Completado
                                        </span>
                                        break;
                                    case ProjectStatus.OnHold:
                                        <span class="badge bg-warning">
                                            <i class="fas fa-pause"></i> En Pausa
                                        </span>
                                        break;
                                    case ProjectStatus.Cancelled:
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times"></i> Cancelado
                                        </span>
                                        break;
                                }
                            </div>

                            @if (project.TeamMembers?.Any() == true)
                            {
                                <div class="mb-3">
                                    <small class="text-muted d-block mb-1">
                                        <i class="fas fa-users"></i> Equipo:
                                    </small>
                                    @foreach (var member in project.TeamMembers.Take(3))
                                    {
                                        <span class="badge bg-light text-dark me-1">@member</span>
                                    }
                                    @if (project.TeamMembers.Count() > 3)
                                    {
                                        <span class="badge bg-light text-dark">+@(project.TeamMembers.Count() - 3)</span>
                                    }
                                </div>
                            }
                        </div>
                        <div class="card-footer">
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye"></i> Ver
                                </a>
                                <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a href="javascript:void(0)" onclick="confirmDelete('@project.Name', '@Url.Action("Delete", new { id = project.Id })')" class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-trash"></i> Eliminar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Paginación -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Navegación de páginas">
                <ul class="pagination justify-content-center">
                    @if (Model.PageNumber > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)" asp-route-pageSize="@ViewBag.PageSize">
                                <i class="fas fa-chevron-left"></i> Anterior
                            </a>
                        </li>
                    }

                    @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-pageSize="@ViewBag.PageSize">@i</a>
                        </li>
                    }

                    @if (Model.PageNumber < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)" asp-route-pageSize="@ViewBag.PageSize">
                                Siguiente <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>

            <div class="text-center mt-3">
                <small class="text-muted">
                    Mostrando @((Model.PageNumber - 1) * Model.PageSize + 1) - @Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount) de @Model.TotalCount proyectos
                </small>
            </div>
        }
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-folder-open fa-5x text-muted"></i>
            </div>
            <h3 class="text-muted">No tienes proyectos aún</h3>
            <p class="text-muted">Crea tu primer proyecto para comenzar a organizar tus tareas.</p>
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="fas fa-plus"></i> Crear Primer Proyecto
            </a>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/taskmanager.js"></script>
}
