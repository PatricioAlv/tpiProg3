@model PagedResultDto<TaskItemDto>

@{
    ViewData["Title"] = "Mis Tareas";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">
            <i class="fas fa-tasks text-success"></i> Mis Tareas
        </h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Nueva Tarea
        </a>
    </div>

    @if (Model?.Items?.Any() == true)
    {
        <div class="row">
            @foreach (var task in Model.Items)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm task-card">
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-start">
                                <h6 class="card-title mb-0">
                                    <i class="fas fa-check-square text-success"></i>
                                    @task.Title
                                </h6>
                                @switch (task.Priority)
                                {
                                    case TaskManager.Shared.Models.TaskPriority.Low:
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-arrow-down"></i> Baja
                                        </span>
                                        break;
                                    case TaskManager.Shared.Models.TaskPriority.Medium:
                                        <span class="badge bg-warning">
                                            <i class="fas fa-arrow-right"></i> Media
                                        </span>
                                        break;
                                    case TaskManager.Shared.Models.TaskPriority.High:
                                        <span class="badge bg-danger">
                                            <i class="fas fa-arrow-up"></i> Alta
                                        </span>
                                        break;
                                    case TaskManager.Shared.Models.TaskPriority.Critical:
                                        <span class="badge bg-dark">
                                            <i class="fas fa-exclamation"></i> Crítica
                                        </span>
                                        break;
                                }
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="card-text">@task.Description</p>
                            
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="fas fa-calendar"></i>
                                    Creado: @task.CreatedAt.ToString("dd/MM/yyyy")
                                </small>
                            </div>

                            @if (task.DueDate.HasValue)
                            {
                                <div class="mb-2">
                                    <small class="text-muted">
                                        <i class="fas fa-clock"></i>
                                        Vence: @task.DueDate.Value.ToString("dd/MM/yyyy")
                                    </small>
                                </div>
                            }

                            @if (task.AssignedToUser != null)
                            {
                                <div class="mb-2">
                                    <small class="text-muted">
                                        <i class="fas fa-user"></i>
                                        Asignado a: <strong>@task.AssignedToUser.Name</strong>
                                    </small>
                                </div>
                            }

                            <div class="mb-3">
                                @switch (task.Status)
                                {
                                    case TaskManager.Shared.Models.TaskStatus.Todo:
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-circle"></i> Por Hacer
                                        </span>
                                        break;
                                    case TaskManager.Shared.Models.TaskStatus.InProgress:
                                        <span class="badge bg-primary">
                                            <i class="fas fa-play"></i> En Progreso
                                        </span>
                                        break;
                                    case TaskManager.Shared.Models.TaskStatus.Testing:
                                        <span class="badge bg-warning">
                                            <i class="fas fa-flask"></i> Pruebas
                                        </span>
                                        break;
                                    case TaskManager.Shared.Models.TaskStatus.Completed:
                                        <span class="badge bg-success">
                                            <i class="fas fa-check"></i> Completado
                                        </span>
                                        break;
                                    case TaskManager.Shared.Models.TaskStatus.Cancelled:
                                        <span class="badge bg-dark">
                                            <i class="fas fa-times"></i> Cancelado
                                        </span>
                                        break;
                                }
                            </div>

                            @if (task.ProjectId > 0)
                            {
                                <div class="mb-2">
                                    <small class="text-muted">
                                        <i class="fas fa-folder"></i>
                                        Proyecto ID: @task.ProjectId
                                    </small>
                                </div>
                            }
                        </div>
                        <div class="card-footer">
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye"></i> Ver
                                </a>
                                <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a href="javascript:void(0)" onclick="confirmDelete('@task.Title', '@Url.Action("Delete", new { id = task.Id })')" class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-trash"></i> Eliminar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Paginación -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Navegación de páginas">
                <ul class="pagination justify-content-center">
                    @if (Model.PageNumber > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)" asp-route-pageSize="@ViewBag.PageSize">
                                <i class="fas fa-chevron-left"></i> Anterior
                            </a>
                        </li>
                    }

                    @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-pageSize="@ViewBag.PageSize">@i</a>
                        </li>
                    }

                    @if (Model.PageNumber < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)" asp-route-pageSize="@ViewBag.PageSize">
                                Siguiente <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>

            <div class="text-center mt-3">
                <small class="text-muted">
                    Mostrando @((Model.PageNumber - 1) * Model.PageSize + 1) - @Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount) de @Model.TotalCount tareas
                </small>
            </div>
        }
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-tasks fa-5x text-muted"></i>
            </div>
            <h3 class="text-muted">No tienes tareas aún</h3>
            <p class="text-muted">Crea tu primera tarea para comenzar a organizar tu trabajo.</p>
            <a asp-action="Create" class="btn btn-success btn-lg">
                <i class="fas fa-plus"></i> Crear Primera Tarea
            </a>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/taskmanager.js"></script>
}
