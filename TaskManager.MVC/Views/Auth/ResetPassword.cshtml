@model TaskManager.Shared.DTOs.ResetPasswordDto
@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">
                    <i class="fas fa-lock"></i> Restablecer Contraseña
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="ResetPassword" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    
                    <input asp-for="Token" type="hidden" />
                    
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label">
                            <i class="fas fa-lock"></i> Nueva Contraseña
                        </label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Mínimo 6 caracteres" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">
                            <i class="fas fa-lock"></i> Confirmar Nueva Contraseña
                        </label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirma tu nueva contraseña" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Restablecer Contraseña
                        </button>
                    </div>
                </form>
                
                <div class="text-center mt-3">
                    <a asp-action="Login" class="text-decoration-none">
                        <i class="fas fa-arrow-left"></i> Volver al Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
